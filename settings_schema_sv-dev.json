{
    "struct_tag": {
        "title": "Structural attribute tag",
        "title_sv": "Strukturellt-attribut-tagg",
        "description": "A tag for a structral attribute",
        "description_sv": "En tagg för ett strukturellt attribut",
        "type": "object",
        "properties": {
            "tag": {
				"title": "Tag",
                "title_sv": "Tagg",
                "description": "The tag name",
                "description_sv": "Taggnamnet",
                "type": "string"
            },
            "attributes": {
				"title": "Structural attributes",
                "title_sv": "Strukturella attribut",
                "description": "The structural attributes in this tag",
                "type": "array",
                "default": [],
                "items": {
					"title": "Structural attribute",
                    "title_sv": "Strukturellt attribut",
                    "type": "string"
                }
            }
        }
    },

    "struct_tag_simple": {
        "title": "Costum attribute tag",
        "title_sv": "Egen attribut-tagg",
        "type": "string"
    },

    "title": "Corpus pipeline makefile settings",
    "title_sv": "Makefilsinställningar till korpusimportkedjan",
    "description": "Settings that generate the Makefile for the corpus pipeline.",

    "type": "object",

    "properties": {
        "corpus": {
            "title": "Corpus name",
            "title_sv": "Korpusnamn",
            "description": "The name of the corpus",
            "default": "untitled",
            "type": "string"
        },

        "lang": {
            "title": "Text language",
            "title_sv": "Språket av texten",
            "description": "The language in which the text is written",
            "default": "sv-dev",
            "enum": ["sv-dev"],
            "type": "string"
        },

        "textmode":{
            "title": "Text input mode",
            "title_sv": "Textmode",
            "description": "",
            "description_sv": "",
            "default": "plain",
            "enum": ["plain", "xml", "file"],
            "type": "string"
        },

        "word_segmenter": {
            "title": "Word segmentation",
            "title_sv": "Ordsegmentering",
            "description": "Word segmenter to use, or a tag optionally supplied with attributes",
            "default": "default_tokenizer",
            "type": [
                {
                    "title": "Segmenter",
                    "title_sv": "Segmenterare",
                    "description": "Segmenter tool to use for words",
                    "type": "string",
                    "enum": ["whitespace", "linebreaks", "blanklines", "default_tokenizer"],
					"class": "typewriter"
                },
                {
                    "title": "Word tag",
                    "title_sv": "Ordtagg",
                    "type": "object",
                    "properties": {
                        "tag": {
                            "title": "Tag",
                            "title_sv": "Tagg",
                            "description": "The identifer of the tag for words in the xml",
                            "type": "string"
                        },
                        "attributes": {
                            "title": "Positional attributes",
                            "title_sv": "Positionella attribut",
                            "description": "The identifer of the attributes of the word tags in the xml",
                            "type": "array",
                            "default": [],
                            "items": {
                                "title": "Positional attribute",
                                "title_sv": "Positionellt attribut",
                                "description": "A positional attribute in the word tag",
                                "type": "object",
                                "properties": {
                                    "key": {
                                        "title": "Key",
                                        "title_sv": "Nyckel",
                                        "description": "The name of the attribute in the XML",
                                        "type": "string"
                                    },
                                    "attribute": {
                                        "title": "Attribute",
                                        "title_sv": "Attribut",
                                        "description": "Custom means that this is a new kind of positional attribute, choosing any other means that it replaces what could otherwise be generated by a tool.",
                                        "type": "string",
                                        "enum": ["custom", "pos", "msd", "lemma", "lex", "saldo", "prefix", "suffix", "ref", "dephead", "deprel"],
                                        "enum_loc": {
                                            "en": {
                                                "custom": "custom attribute"
                                            },
                                            "sv": {
                                                "custom": "nytt attribut"
                                            }
                                        },
										"style_enum": "dropdown"
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },

        "sentence_segmentation": {
            "title": "Sentence segmentation",
            "title_sv": "Meningssegmentering",
            "description": "Sentence segmenter to use, or a tag supplied with optional sentence attributes",
            "description_sv": "Meningssegmenterare som ska användas, eller en tagg med valfria menings-attribut",
            "default": {"sentence_segmenter": "default_tokenizer",
                        "sentence_chunk": "paragraph"},
            "type": [
                {
                    "title": "Segmenter",
                    "title_sv": "Segmenterare",
                    "description": "Segmenter tool to use for sentences",
                    "description_sv": "Modellen/verktyget som ska användas till meningssegmenteringen",
                    "default": "default_tokenizer",
                    "type": "object",
                    "properties": {
                        "sentence_segmenter":{
                            "title": "Segment by",
                            "title_sv": "Segmentera med",
                            "type": "string",
                            "default": "default_tokenizer",
                            "enum": ["whitespace", "linebreaks", "blanklines", "default_tokenizer", "punctuation"],
					        "class": "typewriter"
                        },
                        "sentence_chunk": {
                            "title": "Sentence chunk",
                            "title_sv": "Meningschunk",
                            "description": "",
                            "description_sv": "",
                            "default": "paragraph",
                            "type": [
                                {
                                    "title": "Pre-defined attribute",
                                    "title_sv": "Fördefinerad attribut",
                                    "description": "",
                                    "description_sv": "",
                                    "type": "string",
                                    "enum": ["text", "paragraph"],
                                    "class": "typewriter"
                                },
                                {"$ref": "#/struct_tag_simple"}
                            ]
                        }
                    }
                },
                {"$ref": "#/struct_tag"}
            ]
        },

        "paragraph_segmentation": {
            "title": "Paragraph segmentation",
            "title_sv": "Styckessegmentering",
            "description": "Paragraph segmenter to use, or a tag supplied with optional structural attributes",
            "description_sv": "Styckessegmenterare som ska användas, eller en tagg med valfria strukturella attribut",
            "default": {"paragraph_segmenter": "blanklines",
                        "paragraph_chunk": "text"},
            "type": [
                {
                    "title": "Segmenter",
                    "title_sv": "Segmenterare",
                    "description": "Segmenter tool to use for paragraphs",
                    "description_sv": "Modellen/verktyget som ska användas till styckessegmenteringen",
                    "default": "blanklines",
                    "type": "object",
                    "properties": {
                        "paragraph_segmenter": {
                            "title": "Segment by",
                            "title_sv": "Segmentera med",
                            "type": "string",
                            "default": "blanklines",
                            "enum": ["whitespace", "linebreaks", "blanklines"],
        					"class": "typewriter"
                        },
                        "paragraph_chunk": {
                            "title": "Paragraph chunk",
                            "title_sv": "Styckeschunk",
                            "description": "",
                            "description_sv": "",
                            "default": "text",
                            "type": [
                                {
                                    "title": "Attribute 'text'",
                                    "title_sv": "Attribut 'text'",
                                    "description": "",
                                    "description_sv": "",
                                    "type": "string",
                                    "enum": ["text"],
                					"class": "typewriter"
                                },
                                {"$ref": "#/struct_tag_simple"}
                			]
                        }
                    }
                },
				{"$ref": "#/struct_tag"},
				{
					"title": "No segmentation",
                    "title_sv": "Ingen segmentering",
					"description": "Use this if there are no sensible paragraphs in the text",
                    "description_sv": "Använd detta alternativ om det inte finns några rimliga stycken i texten",
					"type": "string",
					"default": "none",
					"enum": ["none"]
				}
			]
        },

        "named_entity_recognition": {
            "title": "Named entity recognition",
            "title_sv": "Namntaggare",
            "description": "Structural attributes for named entity recognition",
            "default": ["ex", "type", "subtype"],
            "type": "array",
            "items": {
                "title": "Attribute",
                "title_sv": "Attribut",
                "description": "A structural attribute to generate.",
                "type": "string",
                "enum": ["ex", "type", "subtype"]
            }
        },

        "root": {
            "title": "Root tag",
            "title_sv": "Rottagg",
            "description": "The name of the root tag, with optional structural attributes",
            "default": {
                "tag": "text",
                "attributes": []
            },
			"type": [
				{"$ref": "#/struct_tag"}
			]
        },

        "extra_tags": {
            "title": "Extra structural attributes",
            "title_sv": "Ytterligare strukturella attribut",
            "description": "Array of additional structural attributes",
            "type": "array",
            "default": [],
            "items": {
                "$ref": "#/struct_tag"
            }
        },

        "positional_attributes": {
            "title": "Positional attributes",
            "title_sv": "Positional attributes",
            "description": "An array of positional attributes to generate. Attributes already present in words must not appear here again. The value 'word' should be included.",
            "type": "object",
            "default":  {"dependency_attributes": ["ref", "dephead", "deprel"],
                        "lexical_attributes": ["pos", "msd", "lemma", "lex", "saldo"],
                        "compound_attributes": ["complemgram", "compwf", "lemprob"]
                        },
            "properties": {

                "lexical_attributes": {
                    "title": "Lexical analysis",
                    "title_sv": "Lexikalanalys",
                    "description": "An array of lexical positional attributes to generate. Attributes already present in words must not appear here again. The value 'word' should be included.",
                    "type": "array",
                    "default": ["pos", "msd", "lemma", "lex", "saldo"],
                    "items": {
        				"title": "Attribute",
                        "title_sv": "Attribut",
                        "description": "A positional attribute to generate.",
                        "type": "string",
                        "enum": ["pos", "msd", "lemma", "lex", "saldo"]
                    }
                },

                "compound_attributes": {
                    "title": "Compound analysis",
                    "title_sv": "Sammansättningsanalys",
                    "description": "An array of positional attributes to generate. Attributes already present in words must not appear here again. The value 'word' should be included.",
                    "type": "array",
                    "default": ["complemgram", "compwf", "lemprob"],
                    "items": {
                        "title": "Attribute",
                        "title_sv": "Attribut",
                        "description": "A positional attribute to generate.",
                        "type": "string",
                        "enum": ["complemgram", "compwf", "lemprob"]
                    }
                },

                "dependency_attributes": {
                    "title": "Dependency analysis",
                    "title_sv": "Dependensanalys",
                    "description": "An array of positional attributes to generate. Attributes already present in words must not appear here again. The value 'word' should be included.",
                    "type": "array",
                    "default": ["ref", "dephead", "deprel"],
                    "items": {
                        "title": "Attribute",
                        "title_sv": "Attribut",
                        "description": "A positional attribute to generate.",
                        "type": "string",
                        "enum": ["ref", "dephead", "deprel"]
                    }
                }
            }
        }
    }

}
