{
    "struct_tag": {
        "title": "Structural attribute tag",
        "title_sv": "Strukturellt-attribut-tagg",
        "description": "A tag for a structral attribute",
        "description_sv": "En tagg för ett strukturellt attribut",
        "type": "object",
        "properties": {
            "tag": {
				"title": "Tag",
                "title_sv": "Tagg",
                "description": "The tag name",
                "description_sv": "Taggnamnet",
                "type": "string"
            },
            "attributes": {
				"title": "Structural attributes",
                "title_sv": "Strukturella attribut",
                "description": "The structural attributes in this tag",
                "type": "array",
                "default": [],
                "items": {
					"title": "Structural attribute",
                    "title_sv": "Strukturellt attribut",
                    "type": "string"
                }
            }
        }
    },

    "title": "Corpus pipeline makefile settings",
    "title_sv": "Makefilsinställningar till korpusimportkedjan",
    "description": "Settings that generate the Makefile for the corpus pipeline.",

    "type": "object",

    "properties": {
        "corpus": {
            "title": "Corpus name",
            "title_sv": "Korpusnamn",
            "description": "The name of the corpus",
            "default": "untitled",
            "type": "string"
        },

        "lang": {
            "title": "Text language",
            "title_sv": "Språket av texten",
            "description": "The language in which the text is written",
            "default": "de",
            "enum": ["de", "bg", "nl", "la", "pl", "sk", "et", "fi"],
            "type": "string"
        },

        "word_segmenter": {
            "title": "Word segmentation",
            "title_sv": "Ordsegmentering",
            "description": "Word segmenter to use, or a tag optionally supplied with attributes",
            "default": "better_word",
            "type": [
                {
                    "title": "Segmenter",
                    "title_sv": "Segmenterare",
                    "description": "Segmenter tool to use for words",
                    "type": "string",
                    "enum": ["whitespace", "linebreaks", "blanklines", "punkt_word", "better_word"],
					"class": "typewriter"
                },
                {
                    "title": "Word tag",
                    "title_sv": "Ordtagg",
                    "type": "object",
                    "properties": {
                        "tag": {
                            "title": "Tag",
                            "title_sv": "Tagg",
                            "description": "The identifer of the tag for words in the xml",
                            "type": "string"
                        },
                        "attributes": {
                            "title": "Positional attributes",
                            "title_sv": "Positionella attribut",
                            "description": "The identifer of the attributes of the word tags in the xml",
                            "type": "array",
                            "default": [],
                            "items": {
                                "title": "Positional attribute",
                                "title_sv": "Positionellt attribut",
                                "description": "A positional attribute in the word tag",
                                "type": "object",
                                "properties": {
                                    "key": {
                                        "title": "Key",
                                        "title_sv": "Nyckel",
                                        "description": "The name of the attribute in the XML",
                                        "type": "string"
                                    },
                                    "attribute": {
                                        "title": "Attribute",
                                        "title_sv": "Attribut",
                                        "description": "Custom means that this is a new kind of positional attribute, choosing any other means that it replaces what could otherwise be generated by a tool.",
                                        "type": "string",
                                        "enum": ["custom", "pos", "lemma"],
                                        "enum_loc": {
                                            "en": {
                                                "custom": "custom attribute"
                                            },
                                            "sv": {
                                                "custom": "nytt attribut"
                                            }
                                        },
										"style_enum": "dropdown"
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },

        "sentence_segmenter": {
            "title": "Sentence segmenter",
            "title_sv": "Meningssegmentering",
            "description": "Sentence segmenter to use, or a tag supplied with optional sentence attributes",
            "default": "punkt_sentence",
            "type": [
                {
                    "title": "Segmenter",
                    "title_sv": "Segmenterare",
                    "description": "Segmenter tool to use for sentences",
                    "type": "string",
                    "enum": ["whitespace", "linebreaks", "blanklines", "punkt_sentence", "punctuation"],
					"class": "typewriter"
                },
                {"$ref": "#/struct_tag"}
            ]
        },

        "paragraph_segmenter": {
            "title": "Paragraph segmenter",
            "title_sv": "Styckessegmentering",
            "description": "Paragraph segmenter to use, or a tag supplied with optional structural attributes",
            "default": "blanklines",
            "type": [
                {
                    "title": "Segmenter",
                    "title_sv": "Segmenterare",
                    "description": "Segmenter tool to use for paragraphs",
                    "type": "string",
                    "enum": ["whitespace", "linebreaks", "blanklines"],
					"class": "typewriter"
                },
				{"$ref": "#/struct_tag"},
				{
					"title": "No segmentation",
                    "title_sv": "Ingen segmentering",
					"description": "Use this if there are no sensible paragraphs in the text",
                    "description_sv": "Använd detta alternativ om det inte finns några rimliga stycken i texten",
					"type": "string",
					"default": "none",
					"enum": ["none"]
				}
			]
        },

        "root": {
            "title": "Root tag",
            "title_sv": "Rottagg",
            "description": "The name of the root tag, with optional structural attributes",
            "default": {
                "tag": "text",
                "attributes": []
            },
			"type": [
				{"$ref": "#/struct_tag"}
			]
        },

        "extra_tags": {
            "title": "Extra structural attributes",
            "title_sv": "Ytterligare strukturella attribut",
            "description": "Array of additional structural attributes",
            "type": "array",
            "default": [],
            "items": {
                "$ref": "#/struct_tag"
            }
        },

        "positional_attributes": {
            "title": "Positional attributes",
            "title_sv": "Positional attributes",
            "description": "An array of positional attributes to generate. Attributes already present in words must not appear here again. The value 'word' should be included.",
            "type": "object",
            "default": {"lexical_attributes": ["pos", "msd", "lemma"]
                        },
            "properties": {

                "lexical_attributes": {
                    "title": "Lexical analysis",
                    "title_sv": "Lexikalanalys",
                    "description": "An array of lexical positional attributes to generate. Attributes already present in words must not appear here again. The value 'word' should be included.",
                    "type": "array",
                    "default": ["pos", "msd", "lemma"],
                    "items": {
                        "title": "Attribute",
                        "title_sv": "Attribut",
                        "description": "A positional attribute to generate.",
                        "type": "string",
                        "enum": ["pos", "msd", "lemma"]
                    }
                }
            }
        }
    }

}
